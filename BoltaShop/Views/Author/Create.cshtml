@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BoltaShop.Models.Dbo.Author

@{
    ViewData["Title"] = "Add a new author";
}

<div class="row text">
    <div class="col-md-8 offset-2">

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@

                    <div class="form-group text-center">
                        <img id="ImagePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Slika" class="control-label"></label>
                        <input asp-for="Slika" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Ime" class="control-label"></label>
                        <input asp-for="Ime" class="form-control" />
                        <span asp-validation-for="Ime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Prezime" class="control-label"></label>
                        <input asp-for="Prezime" class="form-control" />
                        <span asp-validation-for="Prezime" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Opis" class="control-label"></label>
                        <input asp-for="Opis" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>

        $(document).ready(function() {
            var output = document.getElementById('ImagePreview');
            output.src = $("#Slika").val();
        })

        $("#Slika").on("change", function() {
            var output = document.getElementById('ImagePreview');
            output.src = $(this).val();
        })
    </script>
}