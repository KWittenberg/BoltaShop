@model BoltaShop.Models.Dbo.Author

@{
    ViewData["Title"] = "Delete author";
}

<div class="row text">
    <div class="col-md-8 offset-2">

        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ImagePreview" />
                </div>
                <div class="form-group">
                    <label asp-for="Slika" class="control-label"></label>
                    <input asp-for="Slika" class="form-control" readonly />
                </div>
                <div class="form-group">
                    <label asp-for="Ime" class="control-label"></label>
                    <input asp-for="Ime" class="form-control" readonly />
                    <span asp-validation-for="Ime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Prezime" class="control-label"></label>
                    <input asp-for="Prezime" class="form-control" readonly />
                    <span asp-validation-for="Prezime" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Opis" class="control-label"></label>
                    <input asp-for="Opis" class="form-control" readonly />

                </div>
                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-right" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            var output = document.getElementById('ImagePreview');
            output.src = $("#Slika").val();
        })
    </script>
}